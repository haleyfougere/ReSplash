@page
@model ReSplash.Pages.Photos.EditModel

@{
    ViewData["Title"] = "Edit";

    string imagePath = "~/photos/" + Model.Photo.FileName;
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <img src="@Url.Content(imagePath)" class="img-fluid">
    </div>

    <div class="col-md-8">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Photo.PhotoId" />
            <input type="hidden" asp-for="Photo.ImageViews" />
            <input type="hidden" asp-for="Photo.ImageDownloads" />
            <input type="hidden" asp-for="Photo.FileName" />

            <div class="mb-3">
                <label asp-for="Photo.PublishDate" class="control-label"></label>
                <input asp-for="Photo.PublishDate" class="form-control" readonly />
                <span asp-validation-for="Photo.PublishDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Photo.Description" class="control-label"></label>
                <input asp-for="Photo.Description" class="form-control" />
                <span asp-validation-for="Photo.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Photo.Location" class="control-label"></label>
                <input asp-for="Photo.Location" class="form-control" />
                <span asp-validation-for="Photo.Location" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" /> &nbsp;&nbsp; <a asp-page="./Index" class="btn btn-outline-dark">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
