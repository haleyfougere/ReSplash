@page
@model ReSplash.Pages.Photos.DeleteModel

@{
    ViewData["Title"] = "Delete";

    string imagePath = "~/photos/" + Model.Photo.FileName;
}


<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="col-md-6">
        <img src="@Url.Content(imagePath)" class="img-fluid">
        <br />
    </div>
    <br />

    <form method="post">
        <input type="hidden" asp-for="Photo.PhotoId" />
        <input type="submit" value="Delete" class="btn btn-outline-secondary" />
        <a asp-page="./Index" class="btn btn-outline-secondary">Return</a>
    </form>
</div>
