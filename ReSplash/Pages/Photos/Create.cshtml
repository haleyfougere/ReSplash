@page
@model ReSplash.Pages.Photos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add a New Photo</h1>

<br />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label for="ImageUpload" class="control-label">Photo</label>
                <input type="file" asp-for="ImageUpload" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Photo.Description" class="control-label"></label>
                <input asp-for="Photo.Description" class="form-control" />
                <span asp-validation-for="Photo.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Photo.Location" class="control-label"></label>
                <input asp-for="Photo.Location" class="form-control" />
                <span asp-validation-for="Photo.Location" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}